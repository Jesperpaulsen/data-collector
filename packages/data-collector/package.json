{
  "name": "data-collector",
  "version": "1.0.0",
  "description": "An example monorepo package with testing/esbuild",
  "main": "src/wrapper.ts",
  "scripts": {
    "test": "jest ",
    "prettier": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "verify": "run-p prettier lint",
    "verify:fix": "yarn prettier:fix && yarn lint:fix",
    "build": "esbuild src/** --define:process.env.NODE_ENV=\"production\" --bundle --format=iife --sourcemap --outdir=../../dist && pnpm run cp:manifest",
    "cp:injected-fetch": "cp src/injected-fetch.js ../../dist",
    "cp:manifest": "cp manifest.json ../../dist && cp site.webmanifest ../../dist"
  },
  "author": "Jesper Paulsen",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.154",
    "@types/node": "^16.7.12"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "typings": "dist/src/index.d.ts"
  }
}